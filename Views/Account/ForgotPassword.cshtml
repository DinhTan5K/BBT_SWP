@{
    ViewData["Title"] = "Quên mật khẩu";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Muli:wght@400;600;700&display=swap">
<link rel="stylesheet" href="/css/login.css" />

<div class="login-form">
    <div class="background"></div>
    <div class="login-box">
        <div class="top">
            <img src="/img/logo1.png" alt="Logo">
            <div class="brand">
                <div class="title title-stack forgot-title">
                    <span class="line1">QUÊN</span>
                    <span class="line2">MẬT <span class="hl">KHẨU</span></span>
                </div>

            </div>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger error-message" role="alert">
                <i class="fa-solid fa-exclamation-triangle"></i>
                @ViewBag.ErrorMessage
            </div>
        }

        <!-- Hiển thị lỗi tổng quát -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger error-message" role="alert">
                <i class="fa-solid fa-exclamation-triangle"></i>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <span>@error.ErrorMessage</span>
                }
            </div>
        }

        <form asp-action="SendOtpReset" method="post">
            <input type="hidden" name="purpose" value="reset" />

            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                <input type="email" name="email" class="form-control" placeholder="Nhập email của bạn" required />
            </div>
            <span class="text-danger small validation-error"></span>

            <button type="submit" class="btn-login btn-main w-100">Gửi OTP</button>
        </form>

        <div class="extra-links">
            <p>Nhớ mật khẩu? <a asp-controller="Account" asp-action="Login">Đăng nhập</a></p>
            <p>Chưa có tài khoản? <a asp-controller="Account" asp-action="Register" class="alt">Đăng ký</a></p>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const emailInput = form.querySelector('input[type="email"]');
    
    // Email validation
    emailInput.addEventListener('blur', function() {
        const email = this.value.trim();
        const hasAt = email.includes('@@');
        const hasDot = email.includes('.');
        const isValidEmail = hasAt && hasDot && email.length > 5;
        
        if (email && !isValidEmail) {
            this.closest('.input-group').classList.add('error');
            this.classList.add('is-invalid');
        } else {
            this.closest('.input-group').classList.remove('error');
            this.classList.remove('is-invalid');
        }
    });
    
    // Form submission validation
    form.addEventListener('submit', function(e) {
        const email = emailInput.value.trim();
        
        if (!email) {
            emailInput.closest('.input-group').classList.add('error');
            emailInput.classList.add('is-invalid');
            e.preventDefault();
        }
    });
});
</script>