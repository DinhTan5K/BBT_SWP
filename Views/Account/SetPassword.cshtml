@model SetPasswordModel
@{
    ViewData["Title"] = "Đặt mật khẩu";
}

<link rel="stylesheet" href="/css/Account/editprofile.css" />

<div class="edit-profile-container">
    <div class="edit-profile-card">
        <h3>@ViewData["Title"]</h3>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success success-message text-center fw-bold">
                <i class="fa-solid fa-check-circle"></i>
                @ViewBag.Message
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger error-message" role="alert">
                <i class="fa-solid fa-exclamation-triangle"></i>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <span>@error.ErrorMessage</span>
                }
            </div>
        }

        <form asp-action="SetPassword" method="post">
            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="form-label"><i class="fa-solid fa-key"></i> Mật khẩu mới</label>
                <input asp-for="NewPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Nhập mật khẩu mới" required minlength="7" />
                <span asp-validation-for="NewPassword" class="text-danger validation-error"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label"><i class="fa-solid fa-check"></i> Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Nhập lại mật khẩu" required minlength="7" />
                <span asp-validation-for="ConfirmPassword" class="text-danger validation-error"></span>
            </div>

            <div class="button-group">
                <button type="submit" class="btn btn-primary">Đặt mật khẩu</button>
                <a asp-controller="Account" asp-action="EditProfile" class="btn btn-primary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
