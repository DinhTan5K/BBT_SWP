@model VerifyEmailViewModel
<link rel="stylesheet" href="/css/Account/login.css" />
<div class="login-form">
    <div class="background"></div>
    <div class="login-box">
        <div class="top">
            <img src="https://res.cloudinary.com/do48qpmut/image/upload/v1761645429/uploads/tdppvgyas8bhvfs7lton.png" alt="Logo">
            <div class="brand">
                <div class="title title-stack">
                    <span class="line1">XÁC THỰC</span>
                    <span class="line2">EMAIL</span>
                </div>
            </div>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger error-message" role="alert">
                <i class="fa-solid fa-exclamation-triangle"></i>
                @ViewBag.ErrorMessage
            </div>
        }

        <!-- Hiển thị lỗi tổng quát -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger error-message" role="alert">
                <i class="fa-solid fa-exclamation-triangle"></i>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <span>@error.ErrorMessage</span>
                }
            </div>
        }

        <form asp-action="VerifyEmail" method="post">
            <input type="hidden" asp-for="Email" />

            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                <input asp-for="OtpCode" class="form-control" placeholder="Nhập mã OTP" required />
            </div>
            <span asp-validation-for="OtpCode" class="text-danger small validation-error"></span>

            <button type="submit" class="btn-login btn-main w-100">Xác nhận</button>
        </form>

        <div class="extra-links">
            <p>Chưa nhận được OTP? <a asp-action="SendOtp" asp-controller="Account">Gửi lại</a></p>
            <p>Chưa có tài khoản? <a asp-controller="Account" asp-action="Register" class="alt">Đăng ký</a></p>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const otpInput = form.querySelector('input[name="OtpCode"]');
    
    // OTP validation
    otpInput.addEventListener('blur', function() {
        const otp = this.value.trim();
        
        if (otp && otp.length < 4) {
            this.closest('.input-group').classList.add('error');
            this.classList.add('is-invalid');
        } else {
            this.closest('.input-group').classList.remove('error');
            this.classList.remove('is-invalid');
        }
    });
    
    // Form submission validation
    form.addEventListener('submit', function(e) {
        const otp = otpInput.value.trim();
        
        if (!otp) {
            otpInput.closest('.input-group').classList.add('error');
            otpInput.classList.add('is-invalid');
            e.preventDefault();
        }
    });
});
</script>
