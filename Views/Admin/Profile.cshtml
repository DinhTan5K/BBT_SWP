@model start.Models.Employee
@using start.Models.System
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Hồ sơ cá nhân";

    var avatar = !string.IsNullOrWhiteSpace(Model.AvatarUrl)
         ? Url.Content(Model.AvatarUrl) 
        : Url.Content("https://res.cloudinary.com/do48qpmut/image/upload/v1761645429/uploads/tdppvgyas8bhvfs7lton.png");

    var roleText = "Quản trị viên";
    var security = ViewBag.AdminSecurity as AdminSecurity;
    var isTwoFactorEnabled = security?.IsTwoFactorEnabled ?? false;
    var otpExpiresAt = security?.LastOtpExpiredAt;
    var now = DateTime.Now;
}

<link rel="stylesheet" href="/css/Admin/profile.css" />

<div class="profile-container">
    <div class="profile-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    @* Toast Messages *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successToast" class="alert alert-success text-center" role="alert"
            style="position: fixed; top: 70px; right: 10px; z-index: 1050; max-width: 400px;">
            <i class="fa-solid fa-check-circle"></i>
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div id="errorToast" class="alert alert-danger text-center" role="alert"
            style="position: fixed; top: 70px; right: 10px; z-index: 1050; max-width: 400px;">
            <i class="fa-solid fa-exclamation-circle"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="profile-content-grid">
        @* Sidebar Card *@
        <div class="profile-sidebar-card">
            <div class="avatar-wrapper">
                <img src="@avatar" alt="Avatar" class="profile-avatar-img" />
                <div class="avatar-overlay" title="Thay đổi ảnh đại diện">
                    <i class="fa fa-pen" style="color: white; font-size: 28px;"></i>
                </div>
                <form asp-action="UploadAvatar" asp-controller="Admin" method="post" enctype="multipart/form-data"
                    id="avatarForm">
                    <input type="file" name="avatar" id="avatarInput" accept="image/*" style="display:none;" />
                </form>
            </div>

            <h3 class="customer-name">@Model.FullName</h3>
            <div class="loyalty-level-badge">
                <i class="fa fa-shield"></i> @roleText
            </div>

            <hr class="divider" />

            <div class="quick-contact">
                <p><i class="fa fa-envelope"></i> @(Model.Email ?? "-")</p>
                <p><i class="fa fa-phone"></i> @(Model.PhoneNumber ?? "-")</p>
                @if (Model.Branch != null)
                {
                    <p><i class="fa fa-building"></i> @Model.Branch.Name</p>
                }
            </div>
        </div>

        @* Main Content Area *@
        <div class="profile-main-area">
            <div class="twofactor-card">
                <div class="twofactor-header">
                    <div class="twofactor-icon">
                        <i class="fa fa-shield-halved"></i>
                    </div>
                    <div>
                        <h4>Xác thực hai bước (2FA)</h4>
                        <p>Tăng lớp bảo mật cho tài khoản Admin bằng mã OTP qua email.</p>
                    </div>
                </div>

                @if (isTwoFactorEnabled)
                {
                    <div class="twofactor-status on">
                        <i class="fa fa-check-circle"></i> 2FA đang được bật (Email OTP)
                    </div>
                    
                    @if (security?.LastOtpCode != null && otpExpiresAt.HasValue && otpExpiresAt.Value > now)
                    {
                        <div class="twofactor-otp-panel">
                            <div class="twofactor-otp-header">
                                <h5>Nhập OTP để xác nhận tắt 2FA</h5>
                                <span>Hết hạn lúc @otpExpiresAt.Value.ToString("HH:mm dd/MM")</span>
                            </div>
                            <form asp-action="DisableTwoFactor" method="post" class="twofactor-otp-form">
                                @Html.AntiForgeryToken()
                                <label for="disableOtp">Mã OTP</label>
                                <input type="text"
                                       id="disableOtp"
                                       name="otp"
                                       maxlength="6"
                                       inputmode="numeric"
                                       autocomplete="one-time-code"
                                       placeholder="••••••"
                                       required />
                                <button type="submit" class="btn-success">
                                    <i class="fa fa-lock"></i> Xác nhận tắt 2FA
                                </button>
                            </form>
                        </div>
                    }
                    else if (security?.LastOtpCode != null && otpExpiresAt.HasValue && otpExpiresAt.Value <= now)
                    {
                        <div class="twofactor-alert warning">
                            <i class="fa fa-hourglass-end"></i> Mã OTP đã hết hạn. Vui lòng gửi lại mã xác nhận.
                        </div>
                        <form asp-action="SendDisableTwoFactorOtp" method="post" class="twofactor-actions">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn-outline-danger">
                                <i class="fa fa-power-off"></i> Tắt 2FA
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="SendDisableTwoFactorOtp" method="post" class="twofactor-actions">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn-outline-danger">
                                <i class="fa fa-power-off"></i> Tắt 2FA
                            </button>
                        </form>
                    }
                }
                else
                {
                    <div class="twofactor-status off">
                        <i class="fa fa-exclamation-triangle"></i> 2FA chưa bật – tài khoản dễ bị khai thác nếu mật khẩu bị lộ.
                    </div>
                    <form asp-action="SendTwoFactorSetupOtp" method="post" class="twofactor-actions">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-primary">
                            <i class="fa fa-paper-plane"></i> Gửi mã kích hoạt 2FA
                        </button>
                    </form>

                    @if (security?.LastOtpCode != null && otpExpiresAt.HasValue && otpExpiresAt.Value > now)
                    {
                        <div class="twofactor-otp-panel">
                            <div class="twofactor-otp-header">
                                <h5>Nhập OTP để bật 2FA</h5>
                                <span>Hết hạn lúc @otpExpiresAt.Value.ToString("HH:mm dd/MM")</span>
                            </div>
                            <form asp-action="VerifyTwoFactorSetup" method="post" class="twofactor-otp-form">
                                @Html.AntiForgeryToken()
                                <label for="setupOtp">Mã OTP</label>
                                <input type="text"
                                       id="setupOtp"
                                       name="otp"
                                       maxlength="6"
                                       inputmode="numeric"
                                       autocomplete="one-time-code"
                                       placeholder="••••••"
                                       required />
                                <button type="submit" class="btn-success">
                                    <i class="fa fa-lock"></i> Xác nhận bật 2FA
                                </button>
                            </form>
                        </div>
                    }
                    else if (security?.LastOtpCode != null && otpExpiresAt.HasValue && otpExpiresAt.Value <= now)
                    {
                        <div class="twofactor-alert warning">
                            <i class="fa fa-hourglass-end"></i> Mã OTP đã hết hạn. Vui lòng gửi lại mã kích hoạt.
                        </div>
                    }
                }
            </div>

            @* Personal Information *@
            <div class="detail-block">
                <h4><i class="fa fa-user-circle"></i> Thông tin cá nhân</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <strong>Mã nhân viên:</strong>
                        <span>@Model.EmployeeID</span>
                    </div>

                    <div class="info-item">
                        <strong>Họ và tên:</strong>
                        <span>@Model.FullName</span>
                    </div>

                    <div class="info-item">
                        <strong>Email:</strong>
                        <span>@(Model.Email ?? "-")</span>
                    </div>

                    <div class="info-item">
                        <strong>Số điện thoại:</strong>
                        <span>@(Model.PhoneNumber ?? "-")</span>
                    </div>

                    <div class="info-item">
                        <strong>Ngày sinh:</strong>
                        <span>@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "-")</span>
                    </div>

                    <div class="info-item">
                        <strong>Giới tính:</strong>
                        <span>@(Model.Gender ?? "-")</span>
                    </div>

                    <div class="info-item">
                        <strong>Quốc tịch:</strong>
                        <span>@(Model.Nationality ?? "-")</span>
                    </div>

                    <div class="info-item">
                        <strong>Dân tộc:</strong>
                        <span>@(Model.Ethnicity ?? "-")</span>
                    </div>

                    <div class="info-item">
                        <strong>Ngày vào làm:</strong>
                        <span>@Model.HireDate.ToString("dd/MM/yyyy")</span>
                    </div>

                    <div class="info-item">
                        <strong>Trạng thái:</strong>
                        <span>
                            @if (Model.IsActive)
                            {
                                <span style="display: inline-block; padding: 4px 12px; background: #d1fae5; color: #065f46; border-radius: 999px; font-size: 13px; font-weight: 500;">
                                    <i class="fas fa-check"></i> Đang làm việc
                                </span>
                            }
                            else
                            {
                                <span style="display: inline-block; padding: 4px 12px; background: #fee2e2; color: #991b1b; border-radius: 999px; font-size: 13px; font-weight: 500;">
                                    <i class="fas fa-times"></i> Đã nghỉ
                                </span>
                            }
                        </span>
                    </div>
                </div>
            </div>

            @* Branch Information *@
            @if (Model.Branch != null)
            {
                <div class="detail-block">
                    <h4><i class="fa fa-building"></i> Chi nhánh</h4>
                    <div class="info-grid">
                        <div class="info-item">
                            <strong>Tên chi nhánh:</strong>
                            <span>@Model.Branch.Name</span>
                        </div>
                        <div class="info-item full-width">
                            <strong>Địa chỉ:</strong>
                            <span>@Model.Branch.Address</span>
                        </div>
                    </div>
                </div>
            }

            @* Emergency Contacts *@
            @if (!string.IsNullOrEmpty(Model.EmergencyPhone1) || !string.IsNullOrEmpty(Model.EmergencyPhone2))
            {
                <div class="detail-block">
                    <h4><i class="fa fa-phone-alt"></i> Số điện thoại liên hệ khẩn cấp</h4>
                    <div class="info-grid">
                        @if (!string.IsNullOrEmpty(Model.EmergencyPhone1))
                        {
                            <div class="info-item">
                                <strong>Liên hệ 1:</strong>
                                <span>@Model.EmergencyPhone1</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.EmergencyPhone2))
                        {
                            <div class="info-item">
                                <strong>Liên hệ 2:</strong>
                                <span>@Model.EmergencyPhone2</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .twofactor-card {
        background: linear-gradient(135deg, rgba(15, 23, 42, 0.9), rgba(15, 23, 42, 0.75));
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 24px;
        box-shadow: 0 18px 45px rgba(15, 23, 42, 0.25);
        color: #e2e8f0;
        position: relative;
        overflow: hidden;
    }

    .twofactor-card::before {
        content: "";
        position: absolute;
        inset: -150px;
        background: radial-gradient(circle at top left, rgba(56, 189, 248, 0.15), transparent 65%);
        z-index: 0;
    }

    .twofactor-card > * {
        position: relative;
        z-index: 1;
    }

    .twofactor-header {
        display: flex;
        gap: 18px;
        align-items: center;
        margin-bottom: 20px;
    }

    .twofactor-header h4 {
        margin: 0 0 6px;
        font-size: 20px;
        font-weight: 600;
    }

    .twofactor-header p {
        margin: 0;
        color: #94a3b8;
        font-size: 14px;
    }

    .twofactor-icon {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        background: rgba(56, 189, 248, 0.18);
        color: #38bdf8;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .twofactor-status {
        padding: 12px 16px;
        border-radius: 12px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 18px;
    }

    .twofactor-status.on {
        background: rgba(34, 197, 94, 0.15);
        border: 1px solid rgba(34, 197, 94, 0.3);
        color: #4ade80;
    }

    .twofactor-status.off {
        background: rgba(248, 113, 113, 0.15);
        border: 1px solid rgba(248, 113, 113, 0.3);
        color: #fca5a5;
    }

    .twofactor-actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 18px;
    }

    .twofactor-actions .btn-primary,
    .twofactor-actions .btn-outline-danger {
        border-radius: 12px;
        padding: 12px 20px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .twofactor-actions .btn-primary {
        background: linear-gradient(135deg, #38bdf8, #0ea5e9);
        color: #0f172a;
    }

    .twofactor-actions .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 35px rgba(14, 165, 233, 0.35);
    }

    .twofactor-actions .btn-outline-danger {
        background: transparent;
        border: 1px solid rgba(248, 113, 113, 0.4);
        color: #fca5a5;
    }

    .twofactor-actions .btn-outline-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 35px rgba(248, 113, 113, 0.25);
        background: rgba(248, 113, 113, 0.1);
    }

    .twofactor-otp-panel {
        background: rgba(15, 23, 42, 0.75);
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 14px;
        padding: 20px;
        margin-top: 8px;
    }

    .twofactor-otp-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        gap: 12px;
        color: #94a3b8;
        font-size: 13px;
        margin-bottom: 14px;
    }

    .twofactor-otp-header h5 {
        margin: 0;
        font-size: 16px;
        color: #e2e8f0;
    }

    .twofactor-otp-form {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        align-items: center;
    }

    .twofactor-otp-form label {
        flex: 1 0 100%;
        font-size: 13px;
        font-weight: 600;
        color: #94a3b8;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    .twofactor-otp-form input[type="text"] {
        flex: 1 1 220px;
        background: rgba(15, 23, 42, 0.65);
        border: 1px solid rgba(148, 163, 184, 0.25);
        border-radius: 12px;
        padding: 12px 14px;
        color: #e2e8f0;
        font-size: 18px;
        letter-spacing: 0.25em;
        text-align: center;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

    .twofactor-otp-form input[type="text"]:focus {
        outline: none;
        border-color: #38bdf8;
        box-shadow: 0 0 0 4px rgba(56, 189, 248, 0.18);
    }

    .twofactor-otp-form .btn-success {
        flex: 0 0 auto;
        border-radius: 12px;
        padding: 12px 18px;
        font-weight: 600;
        background: linear-gradient(135deg, #4ade80, #22c55e);
        border: none;
        color: #052e16;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .twofactor-otp-form .btn-success:hover {
        transform: translateY(-1px);
        box-shadow: 0 12px 28px rgba(34, 197, 94, 0.35);
    }

    .twofactor-alert {
        margin-top: 12px;
        padding: 12px 14px;
        border-radius: 12px;
        font-weight: 600;
        display: flex;
        gap: 10px;
        align-items: center;
        font-size: 14px;
    }

    .twofactor-alert.warning {
        background: rgba(248, 113, 113, 0.12);
        color: #f87171;
        border: 1px solid rgba(248, 113, 113, 0.2);
    }

    #successToast, #errorToast {
        animation: slideIn 0.5s ease-out;
    }

    #successToast.hide, #errorToast.hide {
        animation: fadeOut 0.5s ease forwards;
    }

    @@keyframes slideIn {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes fadeOut {
        from {
            opacity: 1;
        }
        to {
            opacity: 0;
            transform: translateX(100%);
        }
    }
</style>

@section Scripts {
    <script>
        // Auto-hide toast messages
        setTimeout(function () {
            var toasts = document.querySelectorAll('#successToast, #errorToast');
            toasts.forEach(toast => {
                if (toast) {
                    toast.classList.add('hide');
                    setTimeout(() => toast.remove(), 500);
                }
            });
        }, 3000);

        // Avatar upload logic - Giống customer profile
        document.querySelectorAll('.avatar-wrapper').forEach(wrapper => {
            const overlay = wrapper.querySelector('.avatar-overlay');
            const avatarInput = wrapper.querySelector('#avatarInput');
            const avatarForm = wrapper.querySelector('#avatarForm');

            // Hiệu ứng hover
            wrapper.addEventListener('mouseenter', () => {
                // Kiểm tra xem đã có style opacity chưa trước khi đặt
                const currentOpacity = window.getComputedStyle(overlay).opacity;
                if (currentOpacity === '0' || currentOpacity === '') {
                    overlay.style.opacity = 1;
                }
            });
            wrapper.addEventListener('mouseleave', () => {
                overlay.style.opacity = 0;
            });

            // Click vào overlay để mở chọn file
            overlay.addEventListener('click', () => {
                avatarInput.click();
            });

            // Khi file được chọn, tự động submit form
            avatarInput.addEventListener('change', () => {
                avatarForm.submit();
            });
        });
    </script>
}
