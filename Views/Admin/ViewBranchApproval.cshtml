@model BranchRequest
@using start.Models
@using Microsoft.EntityFrameworkCore

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chi tiết yêu cầu chi nhánh";
}

<div style="padding: 24px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
        <h2 style="font-size: 24px; font-weight: 600; color: var(--ink); margin: 0;">
            Chi tiết yêu cầu chi nhánh
        </h2>
        <a href="@Url.Action("Approvals", "Admin")" 
           style="padding: 10px 20px; background: var(--bg); color: var(--ink); border: 1px solid var(--line); border-radius: 8px; font-weight: 500; text-decoration: none; display: inline-block;">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px;">
        <!-- Thông tin yêu cầu -->
        <div style="background: var(--card); border: 1px solid var(--line); border-radius: 12px; padding: 24px;">
            <h3 style="font-size: 18px; font-weight: 600; color: var(--ink); margin-bottom: 20px;">Thông tin yêu cầu</h3>
            
            <div style="margin-bottom: 16px;">
                <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Request ID</label>
                <div style="margin-top: 4px; font-size: 16px; color: var(--ink); font-weight: 500;">
                    #@Model.Id
                </div>
            </div>

            <div style="margin-bottom: 16px;">
                <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Loại yêu cầu</label>
                <div style="margin-top: 4px; font-size: 16px; color: var(--ink); font-weight: 500;">
                    @(Model.RequestType switch
                    {
                        RequestType.Add => "Thêm mới",
                        RequestType.Edit => "Sửa",
                        RequestType.Delete => "Xóa",
                        _ => "Không xác định"
                    })
                </div>
            </div>

            <div style="margin-bottom: 16px;">
                <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Trạng thái</label>
                <div style="margin-top: 4px;">
                    @{
                        var statusInfo = Model.Status switch
                        {
                            RequestStatus.Pending => ("#fef3c7", "#92400e", "Chờ duyệt"),
                            RequestStatus.Approved => ("#d1fae5", "#065f46", "Đã duyệt"),
                            RequestStatus.Rejected => ("#fee2e2", "#991b1b", "Đã từ chối"),
                            _ => ("#e5e7eb", "#374151", "Không xác định")
                        };
                    }
                    <span style="display: inline-block; padding: 6px 16px; background: @statusInfo.Item1; color: @statusInfo.Item2; border-radius: 6px; font-size: 14px; font-weight: 600;">
                        @statusInfo.Item3
                    </span>
                </div>
            </div>

            <div style="margin-bottom: 16px;">
                <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Người yêu cầu</label>
                <div style="margin-top: 4px; font-size: 16px; color: var(--ink);">
                    @(Model.RequestedByEmployee?.FullName ?? Model.RequestedBy)
                </div>
                <div style="font-size: 13px; color: var(--muted); margin-top: 2px;">@Model.RequestedBy</div>
            </div>

            <div style="margin-bottom: 16px;">
                <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Ngày yêu cầu</label>
                <div style="margin-top: 4px; font-size: 16px; color: var(--ink);">
                    @Model.RequestedAt.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

            @if (Model.ReviewedBy != null)
            {
                <div style="margin-bottom: 16px;">
                    <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Người duyệt</label>
                    <div style="margin-top: 4px; font-size: 16px; color: var(--ink);">
                        @(Model.ReviewedByEmployee?.FullName ?? Model.ReviewedBy)
                    </div>
                    <div style="font-size: 13px; color: var(--muted); margin-top: 2px;">@Model.ReviewedBy</div>
                </div>

                <div style="margin-bottom: 16px;">
                    <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Ngày duyệt</label>
                    <div style="margin-top: 4px; font-size: 16px; color: var(--ink);">
                        @(Model.ReviewedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.RejectionReason))
            {
                <div style="margin-bottom: 16px;">
                    <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Lý do từ chối</label>
                    <div style="margin-top: 4px; padding: 12px; background: var(--bg); border-radius: 8px; font-size: 14px; color: var(--ink);">
                        @Model.RejectionReason
                    </div>
                </div>
            }

            @if (Model.Status == RequestStatus.Pending)
            {
                <div style="display: flex; gap: 12px; margin-top: 24px;">
                    <button onclick="approveRequest(@Model.Id)" 
                            style="flex: 1; padding: 12px; background: #10b981; color: white; border: none; border-radius: 8px; font-weight: 500; cursor: pointer;">
                        Duyệt
                    </button>
                    <button onclick="rejectRequest(@Model.Id)" 
                            style="flex: 1; padding: 12px; background: #dc2626; color: white; border: none; border-radius: 8px; font-weight: 500; cursor: pointer;">
                        Từ chối
                    </button>
                </div>
            }
        </div>

        <!-- Thông tin chi nhánh -->
        <div style="background: var(--card); border: 1px solid var(--line); border-radius: 12px; padding: 24px;">
            <h3 style="font-size: 18px; font-weight: 600; color: var(--ink); margin-bottom: 20px;">Thông tin chi nhánh</h3>
            
            @if (Model.RequestType == RequestType.Edit && Model.Branch != null)
            {
                <!-- So sánh side-by-side cho Edit request -->
                <div style="margin-bottom: 24px;">
                    <h4 style="font-size: 16px; font-weight: 600; color: var(--ink); margin-bottom: 16px;">So sánh thay đổi</h4>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px;">
                        <!-- Cột trái: Dữ liệu hiện tại -->
                        <div style="padding: 16px; background: #fef3c7; border-radius: 8px; border: 1px solid #fbbf24;">
                            <h5 style="font-size: 14px; font-weight: 600; color: #92400e; margin-bottom: 12px;">Dữ liệu hiện tại</h5>
                            <div style="font-size: 13px; color: var(--ink);">
                                <div style="margin-bottom: 8px;"><strong>Tên:</strong> @(Model.Branch.Name ?? "-")</div>
                                <div style="margin-bottom: 8px;"><strong>Địa chỉ:</strong> @(Model.Branch.Address ?? "-")</div>
                                <div style="margin-bottom: 8px;"><strong>Thành phố:</strong> @(Model.Branch.City ?? "-")</div>
                                <div style="margin-bottom: 8px;"><strong>Số điện thoại:</strong> @(Model.Branch.Phone ?? "-")</div>
                                <div style="margin-bottom: 8px;"><strong>Region:</strong> @(Model.Branch.Region?.RegionName ?? $"ID: {Model.Branch.RegionID}")</div>
                                <div style="margin-bottom: 8px;"><strong>Trạng thái:</strong> @(Model.Branch.IsActive ? "Hoạt động" : "Vô hiệu hóa")</div>
                                @if (Model.Branch.Latitude != 0 && Model.Branch.Longitude != 0)
                                {
                                    <div style="margin-bottom: 8px;"><strong>GPS:</strong> @Model.Branch.Latitude.ToString("F6"), @Model.Branch.Longitude.ToString("F6")</div>
                                }
                            </div>
                        </div>
                        <!-- Cột phải: Dữ liệu mới -->
                        <div style="padding: 16px; background: #d1fae5; border-radius: 8px; border: 1px solid #10b981;">
                            <h5 style="font-size: 14px; font-weight: 600; color: #065f46; margin-bottom: 12px;">Dữ liệu mới</h5>
                            <div style="font-size: 13px; color: var(--ink);">
                                <div style="margin-bottom: 8px;">
                                    <strong>Tên:</strong> 
                                    <span style="@(Model.Branch.Name != Model.Name ? "background: #fef3c7; padding: 2px 4px; border-radius: 4px; font-weight: 600;" : "")">
                                        @(Model.Name ?? "-")
                                    </span>
                                </div>
                                <div style="margin-bottom: 8px;">
                                    <strong>Địa chỉ:</strong> 
                                    <span style="@(Model.Branch.Address != Model.Address ? "background: #fef3c7; padding: 2px 4px; border-radius: 4px; font-weight: 600;" : "")">
                                        @(Model.Address ?? "-")
                                    </span>
                                </div>
                                <div style="margin-bottom: 8px;">
                                    <strong>Thành phố:</strong> 
                                    <span style="@(Model.Branch.City != Model.City ? "background: #fef3c7; padding: 2px 4px; border-radius: 4px; font-weight: 600;" : "")">
                                        @(Model.City ?? "-")
                                    </span>
                                </div>
                                <div style="margin-bottom: 8px;">
                                    <strong>Số điện thoại:</strong> 
                                    <span style="@(Model.Branch.Phone != Model.Phone ? "background: #fef3c7; padding: 2px 4px; border-radius: 4px; font-weight: 600;" : "")">
                                        @(Model.Phone ?? "-")
                                    </span>
                                </div>
                                <div style="margin-bottom: 8px;">
                                    <strong>Region:</strong> 
                                    <span style="@(Model.Branch.RegionID != Model.RegionID ? "background: #fef3c7; padding: 2px 4px; border-radius: 4px; font-weight: 600;" : "")">
                                        @(Model.Region?.RegionName ?? $"ID: {Model.RegionID}")
                                    </span>
                                </div>
                                <div style="margin-bottom: 8px;">
                                    <strong>Trạng thái:</strong> 
                                    <span style="@(Model.Branch.IsActive != Model.IsActive ? "background: #fef3c7; padding: 2px 4px; border-radius: 4px; font-weight: 600;" : "")">
                                        @(Model.IsActive ? "Hoạt động" : "Vô hiệu hóa")
                                    </span>
                                </div>
                                @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                                {
                                    <div style="margin-bottom: 8px;">
                                        <strong>GPS:</strong> 
                                        <span style="@((Model.Branch.Latitude != (decimal)Model.Latitude.Value || Model.Branch.Longitude != (decimal)Model.Longitude.Value) ? "background: #fef3c7; padding: 2px 4px; border-radius: 4px; font-weight: 600;" : "")">
                                            @Model.Latitude.Value.ToString("F6"), @Model.Longitude.Value.ToString("F6")
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Hiển thị thông tin cho Add hoặc Delete -->
                <div style="margin-bottom: 16px;">
                    <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Tên chi nhánh</label>
                    <div style="margin-top: 4px; font-size: 16px; color: var(--ink); font-weight: 500;">
                        @Model.Name
                    </div>
                </div>

                <div style="margin-bottom: 16px;">
                    <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Region</label>
                    <div style="margin-top: 4px; font-size: 16px; color: var(--ink);">
                        @(Model.Region?.RegionName ?? $"Region ID: {Model.RegionID}")
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div style="margin-bottom: 16px;">
                        <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Địa chỉ</label>
                        <div style="margin-top: 4px; font-size: 16px; color: var(--ink);">
                            @Model.Address
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.City))
                {
                    <div style="margin-bottom: 16px;">
                        <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Thành phố</label>
                        <div style="margin-top: 4px; font-size: 16px; color: var(--ink);">
                            @Model.City
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Phone))
                {
                    <div style="margin-bottom: 16px;">
                        <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Số điện thoại</label>
                        <div style="margin-top: 4px; font-size: 16px; color: var(--ink);">
                            @Model.Phone
                        </div>
                    </div>
                }

                <div style="margin-bottom: 16px;">
                    <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Trạng thái</label>
                    <div style="margin-top: 4px;">
                        <span style="display: inline-block; padding: 4px 12px; background: @(Model.IsActive ? "#d1fae5" : "#fee2e2"); color: @(Model.IsActive ? "#065f46" : "#991b1b"); border-radius: 6px; font-size: 14px; font-weight: 600;">
                            @(Model.IsActive ? "Hoạt động" : "Vô hiệu hóa")
                        </span>
                    </div>
                </div>

                @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                {
                    <div style="margin-bottom: 16px;">
                        <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Tọa độ GPS</label>
                        <div style="margin-top: 4px; font-size: 16px; color: var(--ink);">
                            @Model.Latitude.Value.ToString("F6", System.Globalization.CultureInfo.InvariantCulture), @Model.Longitude.Value.ToString("F6", System.Globalization.CultureInfo.InvariantCulture)
                        </div>
                        <div style="margin-top: 8px;">
                            @{
                                var lat = Model.Latitude.Value.ToString("F6", System.Globalization.CultureInfo.InvariantCulture);
                                var lng = Model.Longitude.Value.ToString("F6", System.Globalization.CultureInfo.InvariantCulture);
                                var mapsUrl = $"https://www.google.com/maps?q={lat},{lng}";
                            }
                            <a href="@mapsUrl" 
                               target="_blank" 
                               style="color: #2563eb; text-decoration: none; font-size: 14px;">
                                <i class="fas fa-map-marker-alt"></i> Xem trên Google Maps
                            </a>
                        </div>
                    </div>
                }
            }

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div style="margin-bottom: 16px;">
                    <label style="font-weight: 600; color: var(--muted); font-size: 13px;">Ghi chú</label>
                    <div style="margin-top: 4px; padding: 12px; background: var(--bg); border-radius: 8px; font-size: 14px; color: var(--ink);">
                        @Model.Notes
                    </div>
                </div>
            }

            <!-- Thông tin liên quan -->
            @if ((Model.RequestType == RequestType.Edit || Model.RequestType == RequestType.Delete) && Model.BranchId.HasValue)
            {
                <div style="margin-top: 24px; padding: 16px; background: var(--bg); border-radius: 8px; border: 1px solid var(--line);">
                    <h4 style="font-size: 14px; font-weight: 600; color: var(--ink); margin-bottom: 12px;">
                        <i class="fas fa-info-circle"></i> Thông tin liên quan
                    </h4>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px; font-size: 14px;">
                        <div>
                            <div style="color: var(--muted); margin-bottom: 4px;">Số nhân viên</div>
                            <div style="font-size: 18px; font-weight: 600; color: var(--ink);">
                                @(ViewBag.EmployeeCount ?? 0)
                            </div>
                        </div>
                        <div>
                            <div style="color: var(--muted); margin-bottom: 4px;">Số đơn hàng</div>
                            <div style="font-size: 18px; font-weight: 600; color: var(--ink);">
                                @(ViewBag.OrderCount ?? 0)
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.RequestType == RequestType.Delete && Model.Branch != null)
            {
                <div style="margin-top: 16px; padding: 12px; background: #fee2e2; border-radius: 8px; border-left: 4px solid #dc2626;">
                    <div style="font-size: 13px; color: #991b1b; font-weight: 600; margin-bottom: 4px;">
                        <i class="fas fa-exclamation-triangle"></i> Cảnh báo
                    </div>
                    <div style="font-size: 13px; color: #991b1b;">
                        Chi nhánh này có <strong>@(ViewBag.EmployeeCount ?? 0) nhân viên</strong> và <strong>@(ViewBag.OrderCount ?? 0) đơn hàng</strong> liên quan. 
                        @if ((ViewBag.EmployeeCount ?? 0) > 0 || (ViewBag.OrderCount ?? 0) > 0)
                        {
                            <text>Vui lòng kiểm tra kỹ trước khi xóa.</text>
                        }
                        else
                        {
                            <text>Có thể xóa an toàn.</text>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div style="display: none;">@Html.AntiForgeryToken()</div>

<!-- Modal Từ chối -->
<div id="rejectModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; overflow-y: auto;">
    <div style="max-width: 500px; margin: 50px auto; background: var(--card); border-radius: 12px; padding: 24px; box-shadow: 0 4px 20px rgba(0,0,0,0.15);">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
            <h3 style="font-size: 20px; font-weight: 600; color: var(--ink); margin: 0;">Từ chối yêu cầu</h3>
            <button onclick="closeRejectModal()" style="background: none; border: none; font-size: 24px; color: var(--muted); cursor: pointer; padding: 0; width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">&times;</button>
        </div>
        
        <form id="rejectForm">
            <input type="hidden" id="rejectRequestId" />
            
            <div style="margin-bottom: 16px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: var(--ink);">Lý do từ chối</label>
                <textarea id="rejectReason" rows="4" 
                          style="width: 100%; padding: 10px; border: 1px solid var(--line); border-radius: 8px; font-size: 14px; resize: vertical;"
                          placeholder="Nhập lý do từ chối (tùy chọn)"></textarea>
            </div>

            <div style="display: flex; gap: 12px; justify-content: flex-end;">
                <button type="button" onclick="closeRejectModal()" 
                        style="padding: 10px 20px; background: var(--bg); color: var(--ink); border: 1px solid var(--line); border-radius: 8px; font-weight: 500; cursor: pointer;">
                    Hủy
                </button>
                <button type="submit" 
                        style="padding: 10px 20px; background: #dc2626; color: white; border: none; border-radius: 8px; font-weight: 500; cursor: pointer;">
                    Từ chối
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        async function approveRequest(requestId) {
            if (!confirm('Bạn có chắc muốn duyệt yêu cầu này?')) {
                return;
            }

            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
            try {
                const response = await fetch(`@Url.Action("ApproveBranchRequest", "Admin")/${requestId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: `__RequestVerificationToken=${encodeURIComponent(token)}`
                });

                const data = await response.json();
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message || 'Có lỗi xảy ra');
                }
            } catch (error) {
                alert('Có lỗi xảy ra: ' + error.message);
            }
        }

        function rejectRequest(requestId) {
            document.getElementById('rejectRequestId').value = requestId;
            document.getElementById('rejectModal').style.display = 'block';
        }

        function closeRejectModal() {
            document.getElementById('rejectModal').style.display = 'none';
            document.getElementById('rejectReason').value = '';
        }

        document.getElementById('rejectForm')?.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const requestId = document.getElementById('rejectRequestId').value;
            const reason = document.getElementById('rejectReason').value || '';
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
            
            try {
                const response = await fetch(`@Url.Action("RejectBranchRequest", "Admin")/${requestId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: `__RequestVerificationToken=${encodeURIComponent(token)}&rejectionReason=${encodeURIComponent(reason)}`
                });

                const data = await response.json();
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message || 'Có lỗi xảy ra');
                }
            } catch (error) {
                alert('Có lỗi xảy ra: ' + error.message);
            }
        });

        document.getElementById('rejectModal')?.addEventListener('click', function(e) {
            if (e.target === this) {
                closeRejectModal();
            }
        });
    </script>
}

