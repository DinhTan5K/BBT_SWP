@model News

<div id="newsModal" style="display: block; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; overflow-y: auto;">
    <div style="max-width: 800px; margin: 50px auto; background: var(--card); border-radius: 12px; padding: 24px; box-shadow: 0 4px 20px rgba(0,0,0,0.15);">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
            <h3 style="font-size: 20px; font-weight: 600; color: var(--ink); margin: 0;">
                @(Model.Id > 0 ? "Sửa tin tức" : "Thêm tin tức")
            </h3>
            <button onclick="closeNewsModal()" style="background: none; border: none; font-size: 24px; color: var(--muted); cursor: pointer; padding: 0; width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">&times;</button>
        </div>

        <form id="newsForm" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id" />

            <div style="margin-bottom: 16px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: var(--ink);">Tiêu đề <span style="color: #dc2626;">*</span></label>
                <input type="text" name="Title" value="@Model.Title" required 
                       style="width: 100%; padding: 10px; border: 1px solid var(--line); border-radius: 8px; font-size: 14px;"
                       placeholder="Nhập tiêu đề tin tức" />
            </div>

            <div style="margin-bottom: 16px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: var(--ink);">Nội dung <span style="color: #dc2626;">*</span></label>
                <textarea name="Content" required rows="10"
                          style="width: 100%; padding: 10px; border: 1px solid var(--line); border-radius: 8px; font-size: 14px; resize: vertical; font-family: inherit;"
                          placeholder="Nhập nội dung tin tức">@Model.Content</textarea>
            </div>

            <div style="margin-bottom: 16px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: var(--ink);">Hình ảnh</label>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div style="margin-bottom: 12px;">
                        <img src="@Model.ImageUrl" alt="Current image" 
                             style="max-width: 300px; max-height: 200px; border-radius: 8px; border: 1px solid var(--line);" />
                    </div>
                }
                <input type="file" name="imageFile" accept="image/*" 
                       style="width: 100%; padding: 10px; border: 1px solid var(--line); border-radius: 8px; font-size: 14px;" />
                <p style="font-size: 12px; color: var(--muted); margin-top: 4px;">
                    @(Model.Id > 0 ? "Chọn ảnh mới để thay thế ảnh hiện tại" : "Chọn ảnh cho tin tức (tùy chọn)")
                </p>
            </div>

            <div style="display: flex; gap: 12px; justify-content: flex-end;">
                <button type="button" onclick="closeNewsModal()" 
                        style="padding: 10px 20px; background: var(--bg); color: var(--ink); border: 1px solid var(--line); border-radius: 8px; font-weight: 500; cursor: pointer;">
                    Hủy
                </button>
                <button type="submit" 
                        style="padding: 10px 20px; background: var(--admin-primary); color: white; border: none; border-radius: 8px; font-weight: 500; cursor: pointer;">
                    @(Model.Id > 0 ? "Cập nhật" : "Thêm mới")
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function closeNewsModal() {
        const modal = document.getElementById('newsModal');
        if (modal) {
            modal.style.display = 'none';
        }
    }
</script>

















