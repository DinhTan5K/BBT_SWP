@model Branch
@using start.Models
@{
    var regions = ViewBag.Regions as List<Region> ?? new List<Region>();
    var isEdit = Model.BranchID > 0;
}

<style>
    .form-label { 
        display: block; 
        margin-bottom: 8px; 
        font-weight: 600; 
        color: #1f2937; 
        font-size: 14px;
    }
    .form-control, .form-select { 
        width: 100%; 
        padding: 10px 14px; 
        border: 1px solid #d1d5db; 
        border-radius: 8px; 
        font-size: 14px; 
        transition: all 0.2s;
        background: #fff;
    }
    .form-control:hover, .form-select:hover {
        border-color: #9ca3af;
    }
    .form-control:focus, .form-select:focus { 
        outline: none; 
        border-color: #6366f1; 
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1); 
    }
    .mb-3 { margin-bottom: 20px; }
    .mt-2 { margin-top: 8px; }
    .coord-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
    }
</style>

<div class="modal-overlay" id="branchModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; overflow-y: auto;">
    <div class="modal-dialog" style="max-width: 700px; margin: 50px auto; background: white; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.3);">
        <div class="modal-content" style="padding: 0;">
            <div class="modal-header" style="padding: 20px; border-bottom: 1px solid #e5e7eb; display: flex; justify-content: space-between; align-items: center;">
                <h5 class="modal-title" id="branchModalLabel" style="margin: 0; font-size: 20px; font-weight: 600;">@(isEdit ? "Sửa chi nhánh" : "Thêm chi nhánh mới")</h5>
                <button type="button" class="btn-close-modal" onclick="closeBranchModal()" style="background: none; border: none; font-size: 24px; cursor: pointer; color: #666;">&times;</button>
            </div>
            <form id="branchForm" onsubmit="return false;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="BranchID" value="@Model.BranchID" />
                <div class="modal-body" style="padding: 20px;">
                    <div class="mb-3">
                        <label class="form-label">Tên chi nhánh <span style="color: red;">*</span></label>
                        <input type="text" class="form-control" name="Name" id="Name" value="@(Model?.Name ?? "")" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Khu vực <span style="color: red;">*</span></label>
                        <select class="form-select" name="RegionID" id="RegionID" required>
                            <option value="">-- Chọn khu vực --</option>
                            @foreach (var region in regions)
                            {
                                @if (Model?.RegionID == region.RegionID)
                                {
                                    <option value="@region.RegionID" selected>@region.RegionName</option>
                                }
                                else
                                {
                                    <option value="@region.RegionID">@region.RegionName</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Địa chỉ</label>
                        <textarea class="form-control" name="Address" id="Address" rows="2">@(Model?.Address ?? "")</textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Thành phố</label>
                        <input type="text" class="form-control" name="City" id="City" value="@(Model?.City ?? "")" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số điện thoại</label>
                        <input type="text" class="form-control" name="Phone" id="Phone" value="@(Model?.Phone ?? "")" placeholder="VD: 0123456789" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tọa độ <span style="color: red;">*</span></label>
                        <div class="coord-row">
                            <div>
                                <label style="font-size: 12px; color: #6b7280; margin-bottom: 4px; display: block;">Vĩ độ (Latitude)</label>
                                <input type="number" class="form-control" name="Latitude" id="Latitude" 
                                       value="@(Model?.Latitude.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "0")" 
                                       step="0.000001" required />
                            </div>
                            <div>
                                <label style="font-size: 12px; color: #6b7280; margin-bottom: 4px; display: block;">Kinh độ (Longitude)</label>
                                <input type="number" class="form-control" name="Longitude" id="Longitude" 
                                       value="@(Model?.Longitude.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "0")" 
                                       step="0.000001" required />
                            </div>
                        </div>
                        <small style="color: #6b7280; font-size: 12px; display: block; margin-top: 8px;">
                            * Bạn có thể lấy tọa độ từ Google Maps hoặc các công cụ khác
                        </small>
                    </div>
                </div>
                <div class="modal-footer" style="padding: 20px; border-top: 1px solid #e5e7eb; display: flex; justify-content: flex-end; gap: 12px;">
                    <button type="button" class="btn btn-secondary" onclick="closeBranchModal()" style="padding: 8px 16px; background: #6b7280; color: white; border: none; border-radius: 6px; cursor: pointer;">Đóng</button>
                    <button type="submit" class="btn btn-primary" style="padding: 8px 16px; background: var(--admin-primary, #6366f1); color: white; border: none; border-radius: 6px; cursor: pointer;">@(isEdit ? "Cập nhật" : "Thêm mới")</button>
                </div>
            </form>
        </div>
    </div>
</div>













