                                <div class="discount-label">Cho đơn hàng</div>
                            </div>
                            
                            <div class="discount-dates">
                                <div class="discount-date-item">
                                    <div class="discount-date-label">
                                        <i class="fas fa-calendar-check"></i>
                                        <span>Bắt đầu</span>
                                    </div>
                                    <div class="discount-date-value">${discountStart || 'Không xác định'}</div>
                                </div>
                                <div class="discount-date-item">
                                    <div class="discount-date-label">
