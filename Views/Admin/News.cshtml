            const discountType = card.getAttribute('data-news-discount-type') || '';
            const discountPercent = card.getAttribute('data-news-discount-percent') || '';
            const discountAmount = card.getAttribute('data-news-discount-amount') || '';
            const discountStart = card.getAttribute('data-news-discount-start') || '';
            const discountEnd = card.getAttribute('data-news-discount-end') || '';
            const discountActive = card.getAttribute('data-news-discount-active') || '';
