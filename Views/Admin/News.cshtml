                    : `Giảm ${parseFloat(discountAmount || 0).toLocaleString('vi-VN')} đ`;
                const discountActiveClass = discountActive === 'true' ? 'active' : 'inactive';
                const discountActiveText = discountActive === 'true' ? 'Đang hoạt động' : 'Không hoạt động';
                const discountActiveIcon = discountActive === 'true' ? 'check-circle' : 'pause-circle';
                
                discountContainer.innerHTML = `
                    <div class="discount-card">
                        <div class="discount-card-content">
                            <div class="discount-header">
                                <div class="discount-code-section">
                                    <div class="discount-icon">
                                        <i class="fas fa-ticket-alt"></i>
                                    </div>
                                    <div class="discount-code">${discountCode}</div>
                                </div>
                                <div class="discount-status ${discountActiveClass}">
                                    <i class="fas fa-${discountActiveIcon}"></i>
                                    <span>${discountActiveText}</span>
                                </div>
                            </div>
                            
                            <div class="discount-value-section">
