@section Scripts {
    <script>
        // Normalize text for Vietnamese search
        function normalizeText(str) {
            if (!str) return '';
            return str.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "").replace(/đ/g, "d").replace(/Đ/g, "d").trim();
        }

        // View Toggle
        const viewToggleBtns = document.querySelectorAll('.view-toggle-btn');
        const gridView = document.getElementById('gridView');
        const listView = document.getElementById('listView');

        viewToggleBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const view = this.dataset.view;
                
                viewToggleBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                if (view === 'grid') {
                    gridView.classList.remove('view-hidden');
                    listView.classList.add('view-hidden');
                    localStorage.setItem('newsViewMode', 'grid');
                } else {
                    gridView.classList.add('view-hidden');
                    listView.classList.remove('view-hidden');
                    localStorage.setItem('newsViewMode', 'list');
                }
            });
        });

        // Restore view mode from localStorage
        const savedView = localStorage.getItem('newsViewMode') || 'grid';
        if (savedView === 'list') {
            document.querySelector('[data-view="list"]').click();
        }

        // Search functionality
        const searchInput = document.getElementById('searchNews');
        if (searchInput) {
            searchInput.addEventListener('input', function(e) {
                const searchTerm = normalizeText(e.target.value);
                filterNews();
            });
        }

        // Sort functionality
        const sortSelect = document.getElementById('sortBy');
        if (sortSelect) {
            sortSelect.addEventListener('change', function() {
                filterNews();
            });
        }

        // Month filter
        const monthFilter = document.getElementById('filterMonth');
        if (monthFilter) {
            monthFilter.addEventListener('change', function() {
                filterNews();
            });
        }

        // Main filter function
        function filterNews() {
            const searchTerm = normalizeText(searchInput?.value || '');
            const sortBy = sortSelect?.value || 'newest';
            const filterMonth = monthFilter?.value || '';
            
            const items = document.querySelectorAll('.news-card, .news-list-item');
            
            items.forEach(item => {
                const title = item.getAttribute('data-news-title') || '';
                const date = item.getAttribute('data-news-date') || '';
                const normalizedTitle = normalizeText(title);
                
                // Search filter
                const matchesSearch = !searchTerm || normalizedTitle.includes(searchTerm);
                
                // Month filter
                const matchesMonth = !filterMonth || date.startsWith(filterMonth);
                
                if (matchesSearch && matchesMonth) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });

            // Sort items
            const visibleItems = Array.from(items).filter(item => item.style.display !== 'none');
            
            visibleItems.sort((a, b) => {
                const titleA = a.querySelector('.news-card-title, .news-list-title')?.textContent || '';
                const dateA = new Date(a.getAttribute('data-news-date') || '');
                
                const titleB = b.querySelector('.news-card-title, .news-list-title')?.textContent || '';
                const dateB = new Date(b.getAttribute('data-news-date') || '');
                
                switch(sortBy) {
                    case 'oldest':
                        return dateA - dateB;
                    case 'title-asc':
                        return titleA.localeCompare(titleB, 'vi');
                    case 'title-desc':
                        return titleB.localeCompare(titleA, 'vi');
                    case 'newest':
                    default:
                        return dateB - dateA;
                }
            });

            // Reorder in DOM
            const gridView = document.getElementById('gridView');
            const listView = document.getElementById('listView');
            
            visibleItems.forEach(item => {
                const parent = item.closest('.news-grid, .news-list');
                if (parent) {
                    parent.appendChild(item);
                }
            });
        }

        // Clear filters
        function clearFilters() {
            if (searchInput) searchInput.value = '';
            if (sortSelect) sortSelect.value = 'newest';
            if (monthFilter) monthFilter.value = '@DateTime.Now.ToString("yyyy-MM")';
            filterNews();
        }

        // View news function - Open modal
