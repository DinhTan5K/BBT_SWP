@model ProductCategory
@using start.Models

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chi tiết danh mục";
    var products = Model.Products?.ToList() ?? new List<Product>();
    var activeProducts = products.Where(p => p.IsActive).ToList();
    var inactiveProducts = products.Where(p => !p.IsActive).ToList();
}

<style>
    .product-card {
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 20px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        height: 100%;
    }
    .product-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        border-color: var(--admin-primary);
    }
    .product-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        border: 2px solid #e2e8f0;
        background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
        flex-shrink: 0;
    }
    .product-title {
        font-size: 18px;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 8px;
        line-height: 1.3;
        min-height: 46px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .product-description {
        font-size: 13px;
        color: #64748b;
        margin-bottom: 12px;
        line-height: 1.5;
        min-height: 39px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .product-price {
        margin-bottom: 12px;
        min-height: 32px;
        display: flex;
        align-items: center;
    }
    .product-footer {
        margin-top: auto;
        padding-top: 12px;
        border-top: 1px solid #e2e8f0;
    }
</style>

<div style="padding: 24px;">
    <!-- Breadcrumb -->
    <div style="margin-bottom: 24px;">
        <a href="@Url.Action("Categories", "Admin")" 
           style="display: inline-flex; align-items: center; gap: 10px; padding: 12px 24px; background: var(--bg); color: var(--ink); border: 1px solid var(--line); border-radius: 10px; text-decoration: none; font-weight: 500; transition: all 0.3s ease;"
           onmouseover="this.style.background='var(--card)'; this.style.borderColor='var(--admin-primary)'; this.style.color='var(--admin-primary)'; this.style.transform='translateX(-4px)';"
           onmouseout="this.style.background='var(--bg)'; this.style.borderColor='var(--line)'; this.style.color='var(--ink)'; this.style.transform='translateX(0)';">
            <i class="fas fa-arrow-left"></i> 
            <span>Quay lại danh sách</span>
        </a>
    </div>

    <!-- Header -->
    <div style="background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%); border: 1px solid #e2e8f0; border-radius: 20px; padding: 32px; margin-bottom: 24px; box-shadow: 0 10px 40px rgba(0,0,0,0.06);">
        <div style="display: flex; align-items: center; gap: 20px; margin-bottom: 24px; padding-bottom: 24px; border-bottom: 2px solid #e2e8f0;">
            <div style="width: 80px; height: 80px; background: var(--bg); border: 2px solid var(--line); border-radius: 16px; display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-folder" style="color: var(--admin-primary); font-size: 40px;"></i>
            </div>
            <div style="flex: 1;">
                <h1 style="font-size: 32px; font-weight: 800; margin-bottom: 12px; color: #1e293b; letter-spacing: -0.5px; line-height: 1.2;">
                    @Model.CategoryName
                </h1>
                <div style="display: flex; align-items: center; gap: 16px; flex-wrap: wrap;">
                    <div style="display: flex; align-items: center; gap: 8px; padding: 8px 16px; background: #f1f5f9; border-radius: 10px;">
                        <i class="fas fa-hashtag" style="color: #64748b; font-size: 14px;"></i>
                        <span style="color: #475569; font-size: 14px; font-weight: 600;">
                            ID: @Model.CategoryID
                        </span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 8px; padding: 8px 16px; background: var(--bg); border: 1px solid var(--line); border-radius: 10px;">
                        <i class="fas fa-box" style="color: var(--admin-primary); font-size: 14px;"></i>
                        <span style="color: var(--ink); font-size: 14px; font-weight: 700;">
                            @products.Count sản phẩm
                        </span>
                    </div>
                    @if (activeProducts.Any())
                    {
                        <div style="display: flex; align-items: center; gap: 8px; padding: 8px 16px; background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%); border-radius: 10px; box-shadow: 0 2px 8px rgba(5,150,105,0.15);">
                            <i class="fas fa-check-circle" style="color: #059669; font-size: 14px;"></i>
                            <span style="color: #065f46; font-size: 14px; font-weight: 700;">
                                @activeProducts.Count đang bán
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px;">
            <div style="padding: 20px; background: var(--card); border-radius: 12px; border: 1px solid var(--line); text-align: center;">
                <div style="font-size: 32px; font-weight: 800; color: var(--admin-primary); margin-bottom: 8px;">@products.Count</div>
                <div style="font-size: 13px; color: var(--muted); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Tổng sản phẩm</div>
            </div>
            <div style="padding: 20px; background: var(--card); border-radius: 12px; border: 1px solid var(--line); text-align: center;">
                <div style="font-size: 32px; font-weight: 800; color: #059669; margin-bottom: 8px;">@activeProducts.Count</div>
                <div style="font-size: 13px; color: var(--muted); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Đang bán</div>
            </div>
            <div style="padding: 20px; background: var(--card); border-radius: 12px; border: 1px solid var(--line); text-align: center;">
                <div style="font-size: 32px; font-weight: 800; color: #dc2626; margin-bottom: 8px;">@inactiveProducts.Count</div>
                <div style="font-size: 13px; color: var(--muted); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Ngừng bán</div>
            </div>
            @{
                var totalSizes = products.SelectMany(p => p.ProductSizes ?? new List<ProductSize>()).Count();
            }
            <div style="padding: 20px; background: var(--card); border-radius: 12px; border: 1px solid var(--line); text-align: center;">
                <div style="font-size: 32px; font-weight: 800; color: var(--admin-primary); margin-bottom: 8px;">@totalSizes</div>
                <div style="font-size: 13px; color: var(--muted); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Tổng size</div>
            </div>
        </div>
    </div>

    <!-- Danh sách sản phẩm -->
    <div style="background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%); border: 1px solid #e2e8f0; border-radius: 20px; padding: 32px; box-shadow: 0 10px 40px rgba(0,0,0,0.06);">
        <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 28px; padding-bottom: 20px; border-bottom: 2px solid #e2e8f0;">
            <div style="width: 4px; height: 32px; background: var(--admin-primary); border-radius: 2px;"></div>
            <div>
                <h3 style="font-size: 24px; font-weight: 800; color: #1e293b; margin: 0; letter-spacing: -0.5px;">Sản phẩm trong danh mục</h3>
                <div style="font-size: 14px; color: #64748b; margin-top: 4px; font-weight: 500;">
                    <i class="fas fa-shopping-bag" style="margin-right: 6px;"></i>
                    @products.Count sản phẩm
                </div>
            </div>
        </div>

        @if (products.Any())
        {
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px;">
                @foreach (var product in products.OrderBy(p => p.ProductName))
                {
                    var minPrice = product.ProductSizes?.Any() == true ? product.ProductSizes.Min(ps => ps.Price) : 0;
                    var maxPrice = product.ProductSizes?.Any() == true ? product.ProductSizes.Max(ps => ps.Price) : 0;
                    
                    <div class="product-card">
                        <div style="margin-bottom: 16px;">
                            @if (!string.IsNullOrEmpty(product.Image_Url))
                            {
                                <img src="@Url.Content(product.Image_Url)" alt="@product.ProductName" class="product-image">
                            }
                            else
                            {
                                <div class="product-image" style="display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-image" style="font-size: 48px; opacity: 0.3; color: #94a3b8;"></i>
                                </div>
                            }
                        </div>
                        
                        <h4 class="product-title">
                            @product.ProductName
                        </h4>
                        
                        @if (!string.IsNullOrEmpty(product.Description))
                        {
                            <p class="product-description">
                                @product.Description
                            </p>
                        }
                        else
                        {
                            <p class="product-description" style="visibility: hidden;">&nbsp;</p>
                        }
                        
                        <div class="product-price">
                            @if (minPrice > 0)
                            {
                                <div style="font-size: 20px; font-weight: 800; color: #059669;">
                                    @if (maxPrice > minPrice)
                                    {
                                        <text>@minPrice.ToString("N0") - @maxPrice.ToString("N0") đ</text>
                                    }
                                    else
                                    {
                                        <text>@minPrice.ToString("N0") đ</text>
                                    }
                                </div>
                            }
                            else
                            {
                                <div style="font-size: 14px; color: #94a3b8; font-weight: 500;">Chưa có giá</div>
                            }
                        </div>
                        
                        <div class="product-footer">
                            <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 16px;">
                                <div>
                                    <span style="display: inline-block; padding: 4px 10px; background: var(--bg); color: var(--ink); border: 1px solid var(--line); border-radius: 6px; font-size: 12px; font-weight: 600;">
                                        @(product.ProductSizes?.Count ?? 0) size
                                    </span>
                                </div>
                                <div>
                                    <span style="display: inline-block; padding: 4px 12px; @(product.IsActive ? "background: #d1fae5; color: #065f46;" : "background: #fee2e2; color: #991b1b;") border-radius: 999px; font-size: 12px; font-weight: 600;">
                                        <i class="fas @(product.IsActive ? "fa-check-circle" : "fa-times-circle")"></i>
                                        @(product.IsActive ? "Đang bán" : "Ngừng bán")
                                    </span>
                                </div>
                            </div>
                            
                            @{
                                var returnUrl = Url.Action("ViewCategory", "Admin", new { id = Model.CategoryID });
                            }
                            <a href="@Url.Action("ViewProduct", "Admin", new { id = product.ProductID, returnUrl = returnUrl })" 
                               style="display: flex; align-items: center; justify-content: center; gap: 8px; padding: 10px; background: var(--admin-primary); color: white; border-radius: 8px; text-decoration: none; font-weight: 600; font-size: 13px; transition: all 0.3s;"
                               onmouseover="this.style.transform='translateY(-2px)'; this.style.opacity='0.9';"
                               onmouseout="this.style.transform='translateY(0)'; this.style.opacity='1';">
                                <i class="fas fa-eye"></i>
                                <span>Xem chi tiết</span>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div style="padding: 64px; text-align: center; color: #64748b; background: #ffffff; border: 2px dashed #e2e8f0; border-radius: 16px;">
                <div style="width: 80px; height: 80px; margin: 0 auto 24px; background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-box-open" style="font-size: 40px; color: #94a3b8;"></i>
                </div>
                <h4 style="font-size: 20px; font-weight: 700; color: #1e293b; margin-bottom: 8px;">Chưa có sản phẩm nào</h4>
                <p style="font-size: 14px; color: #64748b; margin: 0;">Danh mục này chưa có sản phẩm nào.</p>
            </div>
        }
    </div>
</div>

