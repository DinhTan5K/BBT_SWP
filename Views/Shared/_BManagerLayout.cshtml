    <script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(function() {
            
            // --- LOGIC NÚT HAMBURGER ---
            // $('#sidebarToggle').on('click', function() {
            //     $('.sidebar').toggleClass('is-visible');
            // });

            // --- LOGIC BẬT/TẮT THEME ---
            const themeToggle = $('#theme-toggle');
            const themeLabel = $('#theme-label');
            const sunIcon = '<i class="fas fa-sun"></i> Chế độ sáng';
            const moonIcon = '<i class="fas fa-moon"></i> Chế độ tối';

            function setTheme(theme) {
                if (theme === 'dark') {
                    document.documentElement.classList.add('dark-mode');
                    themeLabel.html(sunIcon);
                    themeToggle.prop('checked', true);
                    localStorage.setItem('theme', 'dark');
                } else {
                    document.documentElement.classList.remove('dark-mode');
                    themeLabel.html(moonIcon);
                    themeToggle.prop('checked', false);
                    localStorage.setItem('theme', 'light');
                }
            }
            themeToggle.on('change', function() {
                setTheme($(this).is(':checked') ? 'dark' : 'light');
            });
            let savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                setTheme(savedTheme);
            } else if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                setTheme('dark');
            } else {
                setTheme('light');
            }
            
          
            
        }); 
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>