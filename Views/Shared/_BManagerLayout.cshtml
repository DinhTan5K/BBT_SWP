@using System.Security.Claims
@{
    // Lấy thông tin người dùng từ Session hoặc Claims để đảm bảo luôn có dữ liệu
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();

    var userName = Context.Session.GetString("EmployeeName") ?? "BManager User";
    var userEmailRaw = Context.Session.GetString("Email");
    var userEmail = string.IsNullOrWhiteSpace(userEmailRaw) ? "Email không xác định" : userEmailRaw;
    var userInitials = "BM"; // Giá trị dự phòng
    // Sửa lại: Kiểm tra userName khác giá trị mặc định
    if (!string.IsNullOrEmpty(userName) && userName != "BManager User")
    {
        var names = userName.Split(' ').Where(s => !string.IsNullOrEmpty(s)).Select(s => s[0]);
        userInitials = string.Concat(names.Take(2)).ToUpper();
    }
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Buble Tea Manager</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/BManager/bmanager.css" asp-append-version="true" />

    <script>
        // IIFE to prevent FOUC (Flash of Unstyled Content) on dark mode
        (function() {
            try {
                var theme = localStorage.getItem('theme');
                if (theme === 'dark') {
                    document.documentElement.classList.add('dark-mode');
                }
            } catch (e) { }
        })();
    </script>
    @await RenderSectionAsync("Styles", required: false)
</head>
