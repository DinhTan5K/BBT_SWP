@model start.Models.Order

<div class="order-confirmed text-center p-5">
    <div class="icon mb-3">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
    </div>
    <h2>Order Confirmed</h2>
    <p>Order #@Model.OrderID</p>
    <p>ORDER CODE: @Model.OrderCode</p>

    <h5 class="mt-4">Delivery Address</h5>

    <div class="order-items mt-4">
        @foreach (var item in Model.OrderDetails)
        {
            <div class="d-flex align-items-center justify-content-between border-bottom py-2">
                <div class="d-flex align-items-center">
                    <img src="@item.Product.Image_Url" style="width:50px;height:50px;object-fit:cover" class="me-2" />
                    <div>
                        <b>@item.Product.ProductName</b><br />
                        <small>Size: @item.ProductSize?.Size • SL: @item.Quantity</small>
                    </div>
                </div>
                <div>@item.Total.ToString("#,0") đ</div>
            </div>
        }
    </div>

    <div class="mt-4 fw-bold fs-5">
          Tổng cộng: @(Model.OrderDetails.Sum(d => d.Total).ToString("#,0")) đ
    </div>

    <div class="mt-4">
        <a asp-controller="Order" asp-action="Track" asp-route-id="@Model.OrderID" class="btn btn-dark">Track Order</a>
        <a asp-controller="Product" asp-action="Product" class="btn btn-outline-dark">Return to Menu</a>
    </div>
</div>