@model start.Models.Cart
@{
    ViewData["Title"] = "Thanh toán";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Order/order.css" />
}

<style>
    
</style>


@if (Model?.CartDetails == null || !Model.CartDetails.Any())
{
    <div class="empty-cart text-center p-5 my-5">
        <i class="fas fa-box-open fa-3x text-brown mb-3 bounce-icon"></i>
        <h4 class="mb-2 text-brown">Giỏ hàng trống</h4>
        <p class="text-muted mb-4">Bạn chưa thêm sản phẩm nào vào giỏ. Hãy quay lại menu để chọn món nhé!</p>
        <a asp-controller="Product" asp-action="Product" class="btn btn-brown">
            <i class="fas fa-arrow-left me-2"></i> Quay về menu
        </a>
    </div>
}
else
{
    <form id="checkoutForm" onsubmit="return false;">
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="checkout-steps mb-4">
                <div class="step active"><span class="step-index">1</span> Thông tin</div>
                <div class="step"><span class="step-index">2</span> Thanh toán</div>
                <div class="step"><span class="step-index">3</span> Hoàn tất</div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <ul class="nav nav-tabs mb-3" id="orderTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active d-flex align-items-center gap-2" id="delivery-tab-link"
                                data-bs-toggle="tab" href="#deliveryTab" role="tab" aria-controls="deliveryTab"
                                aria-selected="true">
                                <i class="fa-solid fa-truck"></i>
                                <span>Giao hàng tận nơi</span>
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link d-flex align-items-center gap-2" id="pickup-tab-link" data-bs-toggle="tab"
                                href="#pickupTab" role="tab" aria-controls="pickupTab" aria-selected="false">
                                <i class="fa-solid fa-store"></i>
                                <span>Nhận tại cửa hàng</span>
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="deliveryTab" role="tabpanel"
                            aria-labelledby="delivery-tab-link">
                            <div class="p-3 border rounded bg-light shadow-sm">
                                <input type="hidden" name="BranchID" id="branchIdInput" />
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label"><i class="fa-regular fa-user me-1"></i>Họ tên</label>
                                        <input type="text" name="Name" id="nameInput" class="form-control input-focus" value ="@ViewData["CustomerName"]"
                                            required />
                                        <small id="nameError" class="text-danger d-none"></small>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label"><i class="fa-solid fa-phone me-1"></i>Số điện
                                            thoại</label>
                                        <input type="text" name="Phone" id="phoneInput" class="form-control input-focus" value="@ViewData["CustomerPhone"]"
                                            required />
                                        <small id="phoneError" class="text-danger d-none"></small>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label"><i class="fa-solid fa-location-dot me-1"></i>Địa chỉ giao
                                        hàng</label>
                                    <div class="card shadow-sm border-0 p-4 rounded-4">

                                        <div class="position-relative mb-3">
                                            <div class="input-group">
                                                <input type="text" name="Address" id="addressInput"
                                                    class="form-control input-focus" placeholder="Nhập địa chỉ của bạn..." value="@ViewData["CustomerAddress"]">
                                                <button type="button" id="btnLocation"
                                                        class="btn btn-outline-primary d-flex align-items-center gap-2">
                                                    <i class="fa-solid fa-crosshairs"></i>
                                                    <span>Vị trí</span>
                                                </button>
                                            </div>

                                            <ul id="addressSuggestions" class="list-group position-absolute w-100 shadow-lg"
                                                style="z-index: 1000; top: 100%; left: 0; display: none; max-height: 250px; overflow-y: auto;">
                                                </ul>
                                        </div>
                                        <small id="addressError" class="text-danger d-none mb-2 d-block"></small>

                                        <div class="form-floating">
                                            <textarea name="DetailAddress" class="form-control input-focus"
                                                    id="detailAddress" style="height: 100px"></textarea>
                                            <label for="detailAddress">Ghi chú địa chỉ (số nhà, tên đường...)</label>
                                            <small id="detailError" class="text-danger d-none"></small>
                                        </div>
                                    </div>
                                    <div class="nearest-branch-box p-3 rounded mt-2 bg-warning bg-opacity-10 border">
                                        <label class="form-label fw-bold">Chi nhánh gần nhất</label>
                                        <input type="text" id="nearestBranchInput" class="form-control near" readonly />
                                        <small id="branchWarning" class="text-danger d-block mt-1 d-none"></small>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label"><i class="fa-regular fa-note-sticky me-1"></i>Ghi chú</label>
                                    <textarea name="Note" class="form-control input-focus" id="orderNoteDelivery"
                                    placeholder="Ghi chú cho đơn hàng..."></textarea>
                                </div>
                            </div>
                        </div>

                        
                        <div class="tab-pane fade" id="pickupTab" role="tabpanel" aria-labelledby="pickup-tab-link">
                            <div class="p-3 border rounded bg-light shadow-sm">
                                <div class="mb-3">
                                    <label class="form-label"><i class="fa-solid fa-store me-1"></i>Chọn cửa hàng</label>
                                    <select id="branchSelect" name="BranchID_Pickup" class="form-select input-focus">
                                        <option value="">-- Chọn chi nhánh --</option>
                                    </select>
                                    <small id="pickupBranchError" class="text-danger d-none"></small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label"><i class="fa-regular fa-user me-1"></i>Họ tên</label>
                                    <input type="text" name="Name_Pickup" id="pickupNameInput"
                                        class="form-control input-focus" value= "@ViewData["CustomerName"]"/>
                                    <small id="pickupNameError" class="text-danger d-none"></small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label"><i class="fa-solid fa-phone me-1"></i>Số điện thoại</label>
                                    <input type="text" name="Phone_Pickup" id="pickupPhoneInput"
                                        class="form-control input-focus" value="@ViewData["CustomerPhone"]"/>
                                    <small id="pickupPhoneError" class="text-danger d-none"></small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label"><i class="fa-regular fa-note-sticky me-1"></i>Ghi chú</label>
                                    <textarea name="Note" class="form-control input-focus" id="orderNotePickup"
                                    placeholder="Ghi chú cho đơn hàng..."></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3 p-3 border rounded bg-light shadow-sm">
                        <label class="form-label fw-bold"><i class="fa-regular fa-credit-card me-1"></i>Phương thức thanh
                            toán</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Payment" id="paymentCOD" value="COD">
                            <label class="form-check-label" for="paymentCOD">Thanh toán khi nhận hàng (COD)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Payment" id="paymentMomo" value="Momo">
                            <label class="form-check-label" for="paymentMomo">Thanh toán qua ví MoMo</label>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="order-summary shadow-lg p-3 rounded sticky-md-top" style="top: 88px;">
                        <h5 class="cart-title mb-3">Thông tin đơn hàng</h5>
                        <ul class="cart-list">
                            @foreach (var item in Model.CartDetails)
                            {
                                <li class="cart-item d-flex align-items-center mb-3">
                                    <div class="position-relative cart-img me-2">
                                        <img src="@item.Product?.Image_Url" alt="@item.Product?.ProductName" />
                                        <span class="qty-badge">@item.Quantity</span>
                                    </div>
                                    <div class="cart-info flex-fill">
                                        <b>@item.Product?.ProductName</b>
                                        <small class="text-muted d-block">Size: @item.ProductSize?.Size</small>
                                    </div>
                                    <div class="cart-price text-end fw-bold">@item.Total.ToString("#,0") đ</div>
                                </li>
                            }
                        </ul>

                        <div class="promo-section mt-3">
                            <label for="promoCodeInput" class="form-label">Mã khuyến mãi</label>
                            <div class="input-group">
                                <input type="text" id="promoCodeInput" class="form-control"
                                    placeholder="Nhập mã & nhấn Áp dụng" />
                                <button type="button" id="btnApplyPromo" class="btn btn-outline-success">
                                    <span class="spinner-border spinner-border-sm d-none me-1" role="status"
                                        aria-hidden="true"></span>
                                    Áp dụng
                                </button>
                            </div>
                            <div id="promoMessage" class="mt-2 small"></div>
                            <div id="appliedCodesContainer" class="mt-2 d-flex flex-wrap gap-2"></div>
                        </div>

                        <div class="cart-details-summary mt-3">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Tạm tính</span>
                                <span id="itemsTotal" data-value="@Model.CartDetails.Sum(cd => cd.Total)">
                                    @Model.CartDetails.Sum(cd => cd.Total).ToString("#,0") đ
                                </span>
                            </div>
                            <div class="d-flex justify-content-between mt-1">
                                <span class="text-muted">Phí vận chuyển</span>
                                <span id="shippingFee" data-value="0">0 đ</span>
                            </div>
                            <div id="discountRow" class="d-flex justify-content-between mt-1 text-success fw-bold d-none">
                                <span class="text-muted">Giảm giá</span>
                                <span id="discountAmount">0 đ</span>
                            </div>
                        </div>

                        <div class="divider my-2"></div>

                        <div class="cart-total d-flex justify-content-between fw-bold">
                            <span>Tổng cộng</span>
                            <span id="grandTotal">@Model.CartDetails.Sum(cd => cd.Total).ToString("#,0") đ</span>
                        </div>

                        <button type="button" id="btnSubmitOrder" class="btn-place-order mt-3">
                            <span class="spinner-border spinner-border-sm d-none me-1" role="status"
                                aria-hidden="true"></span>
                            ĐẶT HÀNG
                        </button>
                         <a asp-controller="Product" asp-action="Product" class="btn-continue">⬅ Tiếp tục mua hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
}

@section Scripts {
    <script src="/js/order.js" ></script>
}