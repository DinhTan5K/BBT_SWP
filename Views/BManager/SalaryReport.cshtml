@model IEnumerable<SalaryReport>

@{  
    Layout = "_BManagerLayout";
    ViewData["Title"] = "Salary Report";
}

<div style="margin-top: 80px">
<div class="container mt-5">
    <h2 class="mb-4">Salary Report</h2>


    <!-- Bộ lọc -->
    <form method="get" class="row mb-4">
        <div class="col-md-3">
            <label>Employee Name</label>
            <input type="text" name="name" class="form-control" value="@ViewBag.Name" placeholder="Enter employee name..." />
        </div>
        <div class="col-md-2">
            <label>Month</label>
            <input type="number" name="month" class="form-control" value="@ViewBag.Month" min="1" max="12" />
        </div>
        <div class="col-md-2">
            <label>Year</label>
            <input type="number" name="year" class="form-control" value="@ViewBag.Year" />
        </div>
        <div class="col-md-3 d-flex align-items-end gap-2">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="ExportSalaryToExcel"
               asp-route-name="@ViewBag.Name"
               asp-route-month="@ViewBag.Month"
               asp-route-year="@ViewBag.Year"
               class="btn btn-success">Export Excel</a>
        </div>
    </form>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Employee ID</th>
                <th>Full Name</th>
                <th>Total Shifts</th>
                <th>Total Hours</th>
                <th>Total Salary (VND)</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No records found.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeID</td>
                        <td>@item.FullName</td>
                        <td>@item.TotalShifts</td>
                        <td>@item.TotalHours</td>
                        <td>@item.TotalSalary.ToString("N0")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
</div>