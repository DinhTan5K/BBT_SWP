@{
    Layout = "_BManagerLayout";
}
@model List<start.Models.RevenueReport>

@{
    ViewData["Title"] = "Báo cáo Doanh thu";
    var startDate = ViewBag.StartDate as DateTime?;
    var endDate = ViewBag.EndDate as DateTime?;
    var totalRevenue = ViewBag.TotalRevenue as decimal? ?? 0;
}
<div style= "margin-top: 80px">
<h1>Báo cáo Doanh thu</h1>
<hr />

<form asp-action="RevenueReport" method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-4 col-lg-3">
            <label for="startDate" class="form-label">Ngày Bắt Đầu</label>
            <input type="date" id="startDate" name="startDate" class="form-control" 
                   value="@(startDate.HasValue ? startDate.Value.ToString("yyyy-MM-dd") : "")" />
        </div>
        <div class="col-md-4 col-lg-3">
            <label for="endDate" class="form-label">Ngày Kết Thúc</label>
            <input type="date" id="endDate" name="endDate" class="form-control" 
                   value="@(endDate.HasValue ? endDate.Value.ToString("yyyy-MM-dd") : "")" />
        </div>
        <div class="col-md-4 col-lg-2">
            <button type="submit" class="btn btn-primary w-100">Xem Báo Cáo</button>
        </div>
    </div>
</form>

@if (Model.Any())
{
    <div class="alert alert-success mt-4">
        <strong>Tổng Doanh Thu:</strong> @totalRevenue.ToString("N0") VND
    </div>

    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Ngày</th>
                <th>Tổng Số Đơn</th>
                <th>Doanh Thu (VND)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.TotalOrders</td>
                    <td>@item.TotalRevenue.ToString("N0")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">Không có dữ liệu doanh thu trong khoảng thời gian này.</div>
}
</div>