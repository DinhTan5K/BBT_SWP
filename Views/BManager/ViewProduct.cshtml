@{
    Layout = "_BManagerLayout";
}
@model IEnumerable<start.Models.Product>



@{
    ViewData["Title"] = "Product List";
}

<div style="margin-top: 80px;">
    <h2>Product List</h2>
    @Html.AntiForgeryToken()

    <table class="table table-hover align-middle text-center">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Sizes & Prices</th>
                <th>Active</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr data-id="@item.ProductID" class="@(item.IsActive ? "" : "product-inactive")">
                <td>@item.ProductName</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Image_Url))
                    {
                        <img src="@item.Image_Url" width="60" height="60" />
                    }
                </td>
                <td>
                    <ul>
                        @foreach (var size in item.ProductSizes)
                        {
                            <li>@size.Size - @size.Price.ToString("N0") đ</li>
                        }
                    </ul>
                </td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@item.ProductID" class="btn btn-warning">Edit</a>
                    @if(item.IsActive)
                    {
                        <button type="button" class="btn btn-danger btn-sm hide-btn">Hide</button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-success btn-sm restore-btn">Restore</button>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="productModalLabel">Create New Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="text-center"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveProductBtn">Create Product</button>
      </div>
    </div>
  </div>
</div>

<button id="addProductBtn" class="fab" title="Create New Product">+</button>

@section Styles {
    <style>
        /* Style cho bảng và các dòng */
        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }
    
        /* 1. Chỉ làm mờ các ô (td) TRỪ Ô CUỐI CÙNG (ô chứa Actions) */
        tr.product-inactive td:not(:last-child) {
            opacity: 0.5;
            transition: opacity 0.3s ease-in-out;
        }
        /* 2. Làm mờ và vô hiệu hóa nút "Edit" trên dòng đã ẩn */
        tr.product-inactive .btn-warning { /* Nút Edit */
            opacity: 0.5;
            pointer-events: none; /* Vô hiệu hóa click */
        }
        
     
        .fab {
            position: fixed;
            width: 60px;
            height: 60px;
            bottom: 40px;
            right: 40px;
            background-color: #0d6efd;
            color: white;
            border-radius: 50%;
            text-align: center;
            font-size: 30px;
            line-height: 55px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            z-index: 1050;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease-in-out;
        }
        .fab:hover {
            background-color: #0b5ed7;
            transform: scale(1.05);
        }
    </style>
}

@section Scripts {
<script>
    $(document).ready(function(){
        // Khởi tạo modal
        var productModal = new bootstrap.Modal(document.getElementById('productModal'));
        
        //-----------------------------------------
        // LOGIC CHO POP-UP TẠO SẢN PHẨM
        //-----------------------------------------
        $('#addProductBtn').click(function () {
            $.get('@Url.Action("CreateProductPartial")', function (data) {
                $('#productModal .modal-body').html(data);
                var form = $('#createProductForm');
                $.validator.unobtrusive.parse(form);
                productModal.show();
            });
        });
        $('#saveProductBtn').click(function () {
            var form = $('#createProductForm');
            if (form.valid()) {
                $.ajax({
                    url: form.attr('action'),
                    method: form.attr('method'),
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            productModal.hide();
                            location.reload();
                        } else {
                            $('#productModal .modal-body').html(response);
                            $.validator.unobtrusive.parse(form);
                        }
                    },
                    error: function() { alert("An error occurred."); }
                });
            }
        });
        
        //-----------------------------------------
        // LOGIC ẨN/HIỆN SẢN PHẨM (GIỮ NGUYÊN)
        //-----------------------------------------
        $(document).on("click", ".hide-btn", function(){
            var row = $(this).closest("tr");
            var id = row.data("id");
            $.post('@Url.Action("HideProduct")', { id: id, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() })
                .done(function(){
                    row.addClass("product-inactive");
                    row.find(".hide-btn").replaceWith('<button class="btn btn-success btn-sm restore-btn">Restore</button>');
                    row.find("td:nth-child(5)").text("No");
                });
        });
        $(document).on("click", ".restore-btn", function(){
            var row = $(this).closest("tr");
            var id = row.data("id");
            $.post('@Url.Action("RestoreProduct")', { id: id, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() })
                .done(function(){
                    row.removeClass("product-inactive");
                    row.find(".restore-btn").replaceWith('<button class="btn btn-danger btn-sm hide-btn">Hide</button>');
                    row.find("td:nth-child(5)").text("Yes");
                });
        });
    });
</script>
}