@using Microsoft.AspNetCore.Http 

@{
    ViewData["Title"] = "Trang cá nhân";
    var customerId = Context.Session.GetInt32("CustomerID"); // Lấy CustomerID từ session
    var profileImagePath = Context.Session.GetString("ProfileImagePath");
}

<h1>Hello bạn 👋</h1>

@if (!string.IsNullOrEmpty(profileImagePath))
{
    <img src="@profileImagePath" alt="Profile Image" style="width: 100px; height: 100px; border-radius: 50%;" />
}

<p>Chào mừng bạn đã đăng nhập thành công.</p>

@if (customerId != null)
{
    <p><strong>CustomerID:</strong> @customerId</p>
}
else
{
    <p style="color:red">⚠️ CustomerID chưa có trong session!</p>
}

<a asp-controller="Account" asp-action="EditProfile" class="btn btn-primary">
    Chỉnh sửa hồ sơ
</a>