@{
    ViewData["Title"] = "Home";
}


<link rel="stylesheet" href="/css/index_page.css" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap" rel="stylesheet">


<div class="home-container" style="position: relative; z-index: 0;">
    <div class="home-background">
        <span class="text1">Buble</span>
        <span class="text2">Tea</span>
    </div>

    <section class="about" id="about">
        <div class="about-inner">
            <div class="about-text">
                <h2>About Us</h2>
                <p>
                    We craft delicious milk tea with premium tea leaves, fresh milk, and house-made toppings.
                    Our mission is to bring a cozy experience and bold flavors to every cup.
                </p>
                <ul class="about-highlights">
                    <li>Signature boba cooked fresh throughout the day</li>
                    <li>Carefully sourced tea blends</li>
                    <li>Seasonal, limited-time flavors</li>
                </ul>
                <a asp-controller="Product" asp-action="Product" class="about-cta">Explore Menu</a>
            </div>

           <div class="about-media">
                @if (ViewBag.FeaturedProducts != null)
                {
                    foreach (var product in ViewBag.FeaturedProducts)
                    {
                        <div class="product-item">
                            <img src="@product.Image_Url" alt="Milk Tea" />
                        </div>
                    }
                }
                else
                {
                    <p>No products available.</p>
                }
            </div>
        </div>
    </section>
</div>